---
import ShippingInfo from './ShippingInfo.astro';
---

<div id="lightbox" class="lightbox" aria-hidden="true">
  <button class="lightbox__close" aria-label="Close lightbox">&times;</button>
  <button class="lightbox__nav lightbox__nav--prev" aria-label="Previous image">‹</button>
  <button class="lightbox__nav lightbox__nav--next" aria-label="Next image">›</button>
  <div class="lightbox__content">
    <img id="lightbox-image" src="" alt="" class="lightbox__image" />
    <div class="lightbox__info">
      <a id="lightbox-title-link" href="#" target="_blank" rel="noopener noreferrer" class="lightbox__title-link">
        <h3 id="lightbox-title" class="lightbox__title"></h3>
      </a>
      <div id="lightbox-price" class="lightbox__price"></div>
      <div id="lightbox-condition" class="lightbox__condition"></div>
      <div class="lightbox__links">
        <a id="lightbox-geekmarket-link" href="#" target="_blank" rel="noopener noreferrer" class="lightbox__link">
          View on Geekmarket
        </a>
        <a id="lightbox-facebook-link" href="#" target="_blank" rel="noopener noreferrer" class="lightbox__link">
          View on Facebook Marketplace
        </a>
      </div>
      <div class="lightbox__shipping">
        <ShippingInfo compact={true} />
      </div>
    </div>
  </div>
</div>

<style>
  .lightbox {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .lightbox.active {
    display: flex;
  }

  .lightbox__content {
    max-width: 90vw;
    max-height: 90vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    overflow-y: auto;
    overflow-x: hidden;
  }

  .lightbox__image {
    max-width: 100%;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 8px;
  }

  .lightbox__info {
    text-align: center;
    color: white;
  }

  .lightbox__title-link {
    text-decoration: none;
    color: white;
    transition: opacity 0.2s;
  }

  .lightbox__title-link:hover {
    opacity: 0.8;
  }

  .lightbox__title {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .lightbox__price {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #3b82f6;
  }

  .lightbox__condition {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    padding: 0.25rem 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    display: inline-block;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }

  .lightbox__counter {
    font-size: 1rem;
    opacity: 0.8;
  }

  .lightbox__links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .lightbox__link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: rgba(37, 99, 235, 0.2);
    color: #3b82f6;
    text-decoration: none;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 600;
    transition: background 0.2s;
  }

  .lightbox__link:hover {
    background: rgba(37, 99, 235, 0.3);
  }

  .lightbox__shipping {
    margin-top: 1.5rem;
    max-width: 600px;
  }

  .lightbox__close {
    position: absolute;
    top: 20px;
    right: 30px;
    font-size: 50px;
    color: white;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 0;
    width: 50px;
    height: 50px;
    line-height: 40px;
    transition: opacity 0.2s;
  }

  .lightbox__close:hover {
    opacity: 0.7;
  }

  .lightbox__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    font-size: 60px;
    color: white;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    cursor: pointer;
    padding: 20px;
    width: 60px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s;
    z-index: 1001;
  }

  .lightbox__nav:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .lightbox__nav--prev {
    left: 20px;
  }

  .lightbox__nav--next {
    right: 20px;
  }

  .lightbox__nav:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  @media (max-width: 768px) {
    .lightbox__close {
      top: 10px;
      right: 10px;
      font-size: 40px;
    }

    .lightbox__nav {
      font-size: 40px;
      width: 50px;
      height: 60px;
      padding: 10px;
    }

    .lightbox__nav--prev {
      left: 10px;
    }

    .lightbox__nav--next {
      right: 10px;
    }
  }
</style>

<script>
  let currentImages: string[] = [];
  let currentIndex = 0;
  let currentTitle = '';
  let currentPriceEUR = 0;
  let currentPriceCZK = 0;
  let currentCondition = '';
  let currentGameId = '';
  let currentBggUrl = '';
  let currentGeekmarketUrl = '';
  let currentFacebookUrl = '';

  const lightbox = document.getElementById('lightbox');
  const lightboxImage = document.getElementById('lightbox-image') as HTMLImageElement;
  const lightboxTitle = document.getElementById('lightbox-title');
  const lightboxTitleLink = document.getElementById('lightbox-title-link') as HTMLAnchorElement;
  const lightboxPrice = document.getElementById('lightbox-price');
  const lightboxCondition = document.getElementById('lightbox-condition');
  const lightboxGeekmarketLink = document.getElementById('lightbox-geekmarket-link') as HTMLAnchorElement;
  const lightboxFacebookLink = document.getElementById('lightbox-facebook-link') as HTMLAnchorElement;
  const closeBtn = document.querySelector('.lightbox__close');
  const prevBtn = document.querySelector('.lightbox__nav--prev') as HTMLButtonElement;
  const nextBtn = document.querySelector('.lightbox__nav--next') as HTMLButtonElement;

  function openLightbox(images: string[], index: number, title: string, priceEUR?: number, priceCZK?: number, condition?: string, gameId?: string, bggUrl?: string, geekmarketUrl?: string, facebookUrl?: string) {
    currentImages = images;
    currentIndex = index;
    currentTitle = title;
    currentPriceEUR = priceEUR || 0;
    currentPriceCZK = priceCZK || 0;
    currentCondition = condition || '';
    currentGameId = gameId || '';
    currentBggUrl = bggUrl || '';
    currentGeekmarketUrl = geekmarketUrl || '';
    currentFacebookUrl = facebookUrl || '';
    updateLightbox();
    lightbox?.classList.add('active');
    document.body.style.overflow = 'hidden';

    // Update URL hash
    if (currentGameId) {
      window.history.pushState(null, '', `#${currentGameId}`);
    }
  }

  function closeLightbox() {
    lightbox?.classList.remove('active');
    document.body.style.overflow = '';

    // Remove URL hash
    if (window.location.hash) {
      window.history.pushState(null, '', window.location.pathname + window.location.search);
    }
  }

  function updateLightbox() {
    if (lightboxImage && currentImages[currentIndex]) {
      const baseUrl = document.querySelector('base')?.href || window.location.origin + '/bg_sale/';
      lightboxImage.src = `${baseUrl}images/${currentImages[currentIndex]}`;
      lightboxImage.alt = `${currentTitle} - Image ${currentIndex + 1}`;
    }
    if (lightboxTitle) {
      lightboxTitle.textContent = currentTitle;
    }

    // Update title link to BGG
    if (lightboxTitleLink) {
      if (currentBggUrl) {
        lightboxTitleLink.href = currentBggUrl;
        lightboxTitleLink.style.pointerEvents = 'auto';
        lightboxTitleLink.style.cursor = 'pointer';
      } else {
        lightboxTitleLink.style.pointerEvents = 'none';
        lightboxTitleLink.style.cursor = 'default';
      }
    }

    if (lightboxPrice) {
      if (currentPriceEUR > 0) {
        lightboxPrice.textContent = `€${currentPriceEUR} / ${currentPriceCZK} Kč`;
      } else {
        lightboxPrice.textContent = `${currentPriceCZK} Kč`;
      }
    }
    if (lightboxCondition && currentCondition) {
      lightboxCondition.textContent = `Condition: ${currentCondition}`;
    }

    // Update Geekmarket link
    if (lightboxGeekmarketLink) {
      if (currentGeekmarketUrl) {
        lightboxGeekmarketLink.href = currentGeekmarketUrl;
        lightboxGeekmarketLink.style.display = 'inline-block';
      } else {
        lightboxGeekmarketLink.style.display = 'none';
      }
    }

    // Update Facebook link
    if (lightboxFacebookLink) {
      if (currentFacebookUrl) {
        lightboxFacebookLink.href = currentFacebookUrl;
        lightboxFacebookLink.style.display = 'inline-block';
      } else {
        lightboxFacebookLink.style.display = 'none';
      }
    }

    // Update nav buttons
    if (prevBtn) {
      prevBtn.disabled = currentIndex === 0;
      prevBtn.style.display = currentImages.length > 1 ? 'flex' : 'none';
    }
    if (nextBtn) {
      nextBtn.disabled = currentIndex === currentImages.length - 1;
      nextBtn.style.display = currentImages.length > 1 ? 'flex' : 'none';
    }
  }

  function showPrev() {
    if (currentIndex > 0) {
      currentIndex--;
      updateLightbox();
    }
  }

  function showNext() {
    if (currentIndex < currentImages.length - 1) {
      currentIndex++;
      updateLightbox();
    }
  }

  // Event listeners
  closeBtn?.addEventListener('click', closeLightbox);
  prevBtn?.addEventListener('click', showPrev);
  nextBtn?.addEventListener('click', showNext);

  // Close on background click
  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    if (!lightbox?.classList.contains('active')) return;

    if (e.key === 'Escape') closeLightbox();
    if (e.key === 'ArrowLeft') showPrev();
    if (e.key === 'ArrowRight') showNext();
  });

  // Make openLightbox available globally
  (window as any).openLightbox = openLightbox;

  // Add click handlers to all game cards
  document.addEventListener('DOMContentLoaded', () => {
    // Store game data for lookup
    const gamesData = new Map();

    document.querySelectorAll('.game-card').forEach(card => {
      const cardElement = card as HTMLElement;
      const title = card.querySelector('.game-card__title')?.textContent || '';
      const slides = card.querySelectorAll('.image-carousel__slide img');
      const images = Array.from(slides).map(img => {
        const src = (img as HTMLImageElement).src;
        return src.split('/images/')[1];
      });

      // Get price and condition from badge
      const priceBadge = card.querySelector('.image-carousel__price-badge');
      let priceEUR = 0;
      let priceCZK = 0;
      let condition = '';

      if (priceBadge) {
        const priceText = priceBadge.textContent || '';
        const eurMatch = priceText.match(/€(\d+)/);
        const czkMatch = priceText.match(/(\d+)\s*Kč/);
        const conditionMatch = priceText.match(/(Like new|Very good|Good|Acceptable)/i);

        if (eurMatch) priceEUR = parseInt(eurMatch[1]);
        if (czkMatch) priceCZK = parseInt(czkMatch[1]);
        if (conditionMatch) condition = conditionMatch[1];
      }

      // Get BGG, GeekMarket, and Facebook URLs from data attributes
      const carousel = card.querySelector('.image-carousel') as HTMLElement;
      const bggUrl = carousel?.dataset.bggUrl || '';
      const geekmarketUrl = carousel?.dataset.geekmarketUrl || '';
      const facebookUrl = carousel?.dataset.facebookUrl || '';

      // Generate game ID from title (same format as in games.json)
      const gameId = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/^-|-$/g, '');

      // Store game data
      gamesData.set(gameId, { images, title, priceEUR, priceCZK, condition, bggUrl, geekmarketUrl, facebookUrl });

      cardElement.style.cursor = 'pointer';
      cardElement.addEventListener('click', () => {
        openLightbox(images, 0, title, priceEUR, priceCZK, condition, gameId, bggUrl, geekmarketUrl, facebookUrl);
      });
    });

    // Check URL hash on page load and open lightbox if game ID is present
    const openGameFromHash = () => {
      const hash = window.location.hash.slice(1); // Remove the '#'
      if (hash && gamesData.has(hash)) {
        const game = gamesData.get(hash);
        openLightbox(game.images, 0, game.title, game.priceEUR, game.priceCZK, game.condition, hash, game.bggUrl, game.geekmarketUrl, game.facebookUrl);
      }
    };

    // Open game if hash is in URL
    openGameFromHash();

    // Handle browser back/forward buttons
    window.addEventListener('hashchange', () => {
      if (!window.location.hash && lightbox?.classList.contains('active')) {
        closeLightbox();
      } else {
        openGameFromHash();
      }
    });
  });
</script>
